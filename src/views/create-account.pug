doctype html
html(lang="en")
    head
        include partials/head
    body.login
        .contenedor-formulario
            h1 Crea tu cuenta en UpTask

            if errors
                each error in errors
                    p.alerta #{ error.message }

            form#formulario.caja.caja-login( method="post" action="/create-account" )

                .campo
                    label( for="email" ) Correo:
                    input( type="email" name="email" placeholder="evasofia@correo.co" )
                .campo
                    label( for="password" ) Contraseña:
                    input( type="password" name="password" placeholder="*********" )
                .campo.enviar
                    input.boton(type="submit" value="Crear cuenta")
                .campo 
                    a( href="/login" ) Volver a iniciar sesión

        script( src="/dist/bundle.js" )